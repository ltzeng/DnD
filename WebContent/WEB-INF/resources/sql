CREATE TABLE `Armor_List` (
  `armor_id`            NOT NULL AUTO_INCREMENT,
  `armor_name`          VARCHAR(128),
  `armor_class`         int(11),
  `cost`                int(11),
  `weight`              int(11),
  `stealth`             VARCHAR(128),
  PRIMARY KEY (`armor_id`)
);

