CREATE TABLE `Player_Character` (
  `character_id`    NOT NULL AUTO_INCREMENT,
  `adventure_id`    VARCHAR(128),
  `character_name`  VARCHAR(128),
  `background`      VARCHAR(128),
  `exp`             VARCHAR(128),
  `level`           int(11),
  `maxHP`           int(11),
  `hp`              int(11),
  `gender`          VARCHAR(128),
  `characterClass`  VARCHAR(128),
  `race`            VARCHAR(128),
  `speed`           int(11),
  `initiative`      int(11),
  `armorClass`      int(11)
  PRIMARY KEY (`character_id`)
);

CREATE TABLE `Ability_Scores` (
  `ability_score_id`    NOT NULL AUTO_INCREMENT,
  `character_id`        int(11),
  `str`                 int(11),
  `dex`                 int(11),
  `con`                 int(11),
  `intel`               int(11),
  `wis`                 int(11),
  `cha`                 int(11)
  PRIMARY KEY (`ability_score_id`)
);

CREATE TABLE `Weapons_List` (
  `weapon_id`           NOT NULL AUTO_INCREMENT,
  `weapon_name`         VARCHAR(128),
  `damage`              int(11),
  `weight`              int(11),
  `cost`                int(11),
  `properties`          VARCHAR(128),
  `type`                VARCHAR(128)
  PRIMARY KEY (`weapon_id`)
);


